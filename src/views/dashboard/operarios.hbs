
<link rel="stylesheet" href="/css/operario/main.css">
<div class="row ">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <div>
                    <div class="form-group">
                        <input type="text" id="input-operario" class="form-control" maxlength="50" autocomplete="off"
                            placeholder="NUM OPERARIO" required>
                    </div>
                    <div class="form-group">

                        <ul id="keyboard">
                            <li class="letter">7</li>
                            <li class="letter">8</li>
                            <li class="letter">9</li>

                            <li class="letter">4</li>
                            <li class="letter">5</li>
                            <li class="letter">6</li>

                            <li class="letter">1</li>
                            <li class="letter">2</li>
                            <li class="letter">3</li>

                            <li></li>
                            <li class="letter">0</li>
                            <li class="letter delete">&lt;</li>
                        </ul>
                    </div>
                    <button id="btn-entrar" class="btn btn-success btn-block">ENTRAR</button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <div class="table-responsive lista">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellidos</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody id="tbody">

                </tbody>
            </table>

        </div>
    </div>
</div>

<script src="/js/operario/main.js"></script>