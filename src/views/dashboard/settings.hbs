<link href="/css/steppers.min.css" rel="stylesheet">
<link href="/css/keyboard.css" rel="stylesheet">
<script src="/js/steppers.min.js"></script>
<script src="/js/keyboard.js"></script>
<script src="/js/material-select.min.js"></script>

<form method="POST" action="/dashboard/settings">
<ul class="stepper linear">
  <li class="step active">
    <div data-step-label="Sección y máquina" class="step-title waves-effect waves-dark">Paso 1 - General</div>
    <div class="step-new-content">
      <div class="row">
        <div class="md-form col-6 ml-auto">
          <!--Secciones select-->
          <select id="select-secciones" name="seccion" class="mdb-select md-form colorful-select dropdown-primary">
            {{#each secciones}}
            <option value="{{this.CodSeccion}}" {{{isSelected ../puesto/seccion this.CodSeccion}}}>{{this.Nombre}}</option>
            {{/each}}
          </select>
          <label class="mdb-main-label">Sección</label>
          <!--/Secciones select-->
        </div>

        <div class="md-form col-6 ml-auto">
          <!--Maquinas select-->
          <select id="select-maquinas" name="maquina" class="mdb-select md-form colorful-select dropdown-primary">
            {{#each maquinas}}
            <option value="{{this.CodigoEtiqueta}}" {{{isSelected ../puesto/maquina/CodigoEtiqueta this.CodigoEtiqueta}}}>{{this.Nombre}}</option>
            {{/each}}
            <!--> Fetch maquinas despues de seleccionar seccion <-->
          </select>
          <label class="mdb-main-label">Máquina</label>
          <!--/Blue select-->
        </div>
      </div>

      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
      </div>
    </div>
  </li>
  <li class="step">
    <div class="step-title waves-effect waves-dark">Paso 2 - Máquina</div>
    <div class="step-new-content">
      <div class="row">
        <div class="md-form col-6 ml-auto">
          <div class="d-flex justify-content-center my-4">
            <div class="range-field w-75">
              <input id="input-ritmo-ideal" name="ritmo" class="border-0" type="range" min="0" max="9999" value="{{puesto/ritmo}}" />
            </div>
            <label class="mdb-main-label">Ritmo ideal</label>
            <span id="label-ritmo-ideal" class="font-weight-bold text-primary ml-2 mt-1"></span>
          </div>
        </div>
        <div class="md-form col-6 ml-auto">
          <div class="d-flex justify-content-center my-4">
            <div class="range-field w-75">
              <input class="border-0" type="range" min="0" max="100" />
            </div>
            <span class="font-weight-bold text-primary ml-2 mt-1"></span>
          </div>
        </div>
      </div>
      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
        <button class="waves-effect waves-dark btn btn-sm btn-secondary previous-step">ATRÁS</button>
      </div>
    </div>
  </li>
  <li class="step">
    <div class="step-title waves-effect waves-dark">Paso 3 - Guardar</div>
    <div class="step-new-content">
      Configuración finalizada
      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary m-0 mt-4" type="submit">ENVIAR</button>
      </div>
    </div>
  </li>
</ul>
</form>

<script src="/js/settings/main.js"></script>