<link href="/css/steppers.min.css" rel="stylesheet">
<link href="/css/keyboard.css" rel="stylesheet">
<script src="/js/steppers.min.js"></script>
<script src="/js/keyboard.js"></script>
<script src="/js/material-select.min.js"></script>

<form method="POST" action="/dashboard/settings">
  <ul class="stepper linear">
    <li class="step active">
      <div data-step-label="Sección y máquina" class="step-title waves-effect waves-dark">Paso 1 - General</div>
      <div id="step-1" class="step-new-content">
        <div class="row">
          <div id="btn-add-maquina" class="waves-effect waves-dark btn btn-sm btn-success"> + Otra máquina</div>
        </div>
        <div class="row">

          <div class=" col-6 ml-auto">
            <label class="">Sección 1</label>

            <!--Secciones select-->
            <select id="select-secciones-1" name="seccion" class="">
              {{#each secciones}}
              <option value="{{this.CodSeccion}}" {{{isSelected ../puesto/seccion this.CodSeccion}}}>{{this.Nombre}}
              </option>
              {{/each}}
            </select>
            <!--/Secciones select-->
          </div>

          <div class="col-6 ml-auto">
            <label class="">Máquina 1</label>

            <!--Maquinas select-->
            <select id="select-maquinas-1" name="maquina" class="">
              {{#each maquinas}}
              <option value="{{this.CodigoEtiqueta}}"
                {{{isSelected ../puesto/maquina/CodigoEtiqueta this.CodigoEtiqueta}}}>{{this.Nombre}}</option>
              {{/each}}
              <!--> Fetch maquinas despues de seleccionar seccion <-->
            </select>
            <!--/Blue select-->
          </div>
        </div>

        <div id="body-step-1">

        </div>

        <div class="step-actions">
          <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
        </div>
      </div>
    </li>
    <li class="step">
      <div data-step-label="Ritmo máquina" class="step-title waves-effect waves-dark">Paso 2 - Ritmo</div>
      <div class="step-new-content">
        <div class="row">
          <div class="md-form col-6 ml-auto">
            <div class="d-flex justify-content-center my-4">
              <div class="range-field w-75">
                <input id="input-ritmo-ideal" name="ritmo" class="border-0" type="range" min="0" max="9999"
                  value="{{puesto/ritmo}}" />
              </div>
              <label class="mdb-main-label">Ritmo ideal</label>
              <span id="label-ritmo-ideal" class="font-weight-bold text-primary ml-2 mt-1"></span>
            </div>
          </div>
          <div class="md-form col-6 ml-auto">
            <div class="d-flex justify-content-center my-4">
              <div class="range-field w-75">
                <input class="border-0" type="range" min="0" max="100" />
              </div>
              <span class="font-weight-bold text-primary ml-2 mt-1"></span>
            </div>
          </div>
        </div>
        <div class="step-actions">
          <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
          <button class="waves-effect waves-dark btn btn-sm btn-secondary previous-step">ATRÁS</button>
        </div>
      </div>
    </li>
    <li class="step">
      <div data-step-label="Pulsos de entrada" class="step-title waves-effect waves-dark">Paso 3 - Entradas</div>
      <div class="step-new-content">
        <div class="row">
          <div class="col-6 ml-auto">
            <label class="">Pin pulso 1</label>
            <!--PINS select-->
            <select id="select-pin-pulso-1" name="pin-pulso-1" class="">
              <option>MANUAL</option>
              <option>GPIO 8</option>
              <option>GPIO 12</option>
              <option>GPIO 14</option>
              <option>GPIO 16</option>
              <option>GPIO 18</option>
            </select>
          </div>
          <div class="col-6 ml-auto">
            <label class="">Equivalencia pares</label>
            <!--PINS select-->
            <input min="1" max="999999" type="number" value="1" name="equivalencia-pares-1">
          </div>
        </div>
        <div id="body-pins">

        </div>

        <div class="step-actions">
          <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
          <button class="waves-effect waves-dark btn btn-sm btn-secondary previous-step">ATRÁS</button>
        </div>
      </div>
    </li>
    <li class="step">
      <div data-step-label="Incidencias / indicadores" class="step-title waves-effect waves-dark">Paso 4 - Salidas</div>
      <div class="step-new-content">
        <div class="row">
          <div class="md-form col-6 ml-auto">
            <div class="d-flex justify-content-center my-4">
              <div class="range-field w-75">
                <input id="input-ritmo-ideal" name="ritmo" class="border-0" type="range" min="0" max="9999"
                  value="{{puesto/ritmo}}" />
              </div>
              <label class="mdb-main-label">Ritmo ideal</label>
              <span id="label-ritmo-ideal" class="font-weight-bold text-primary ml-2 mt-1"></span>
            </div>
          </div>
          <div class="md-form col-6 ml-auto">
            <div class="d-flex justify-content-center my-4">
              <div class="range-field w-75">
                <input class="border-0" type="range" min="0" max="100" />
              </div>
              <span class="font-weight-bold text-primary ml-2 mt-1"></span>
            </div>
          </div>
        </div>
        <div class="step-actions">
          <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
          <button class="waves-effect waves-dark btn btn-sm btn-secondary previous-step">ATRÁS</button>
        </div>
      </div>
    </li>
    <li class="step">
      <div class="step-title waves-effect waves-dark">Paso 5 - Guardar</div>
      <div class="step-new-content">
        Configuración finalizada
        <div class="step-actions">
          <button class="waves-effect waves-dark btn btn-sm btn-primary m-0 mt-4" type="submit">ENVIAR</button>
        </div>
      </div>
    </li>
  </ul>
</form>

<script src="/js/settings/main.js"></script>