<link href="/css/steppers.min.css" rel="stylesheet">
<link href="/css/keyboard.css" rel="stylesheet">
<script src="/js/steppers.min.js"></script>
<script src="/js/keyboard.js"></script>
<script src="/js/material-select.min.js"></script>



<ul class="stepper linear">
  <li class="step active">
    <div data-step-label="Sección y máquina" class="step-title waves-effect waves-dark">Paso 1 - General</div>
    <div class="step-new-content">
      <div class="row">
        <div class="md-form col-12 ml-auto">
          <!--Secciones select-->
          <select id="select-secciones" class="mdb-select md-form colorful-select dropdown-primary">
            {{#each secciones}}
            <option value="{{this.CodSeccion}}">{{this.Nombre}}</option>
            {{/each}}
          </select>
          <label class="mdb-main-label">Sección</label>
          <!--/Secciones select-->
        </div>
      </div>
      <div class="row">
        <div class="md-form col-12 ml-auto">
          <!--Maquinas select-->
          <select class="mdb-select md-form colorful-select dropdown-primary">
            <option value="1">Option 1</option>
            <option value="2">Option 2</option>
            <option value="3">Option 3</option>
            <option value="4">Option 4</option>
            <option value="5">Option 5</option>
          </select>
          <label class="mdb-main-label">Máquina</label>
          <!--/Blue select-->
        </div>
      </div>
      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
      </div>
    </div>
  </li>
  <li class="step">
    <div class="step-title waves-effect waves-dark">Paso 2 - Máquina</div>
    <div class="step-new-content">
      <div class="row">
        <div class="md-form col-12 ml-auto">
          <input id="test" type="text" class="form-control validate use-keyboard-input" required>
          <label for="password-linear"> </label>
        </div>
      </div>
      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary next-step">SIGUIENTE</button>
        <button class="waves-effect waves-dark btn btn-sm btn-secondary previous-step">ATRÁS</button>
      </div>
    </div>
  </li>
  <li class="step">
    <div class="step-title waves-effect waves-dark">Paso 3 - Guardar</div>
    <div class="step-new-content">
      Configuración finalizada
      <div class="step-actions">
        <button class="waves-effect waves-dark btn btn-sm btn-primary m-0 mt-4" type="button">ENVIAR</button>
      </div>
    </div>
  </li>
</ul>

<script>
  $(document).ready(function () {
    $('.stepper').mdbStepper();
    $('.mdb-select').materialSelect();
    Keyboard.init();
  })

  $('#select-secciones').change(function(){
    const codSeccion = $(this).find(":selected").val() 
    $.ajax({
      url: `/dashboard/settings/maquinasEnSeccion/${codSeccion}` ,
      succes: (result)=>{
        console.log(result)
      },
      error: (err)=>{
        console.log(err)
      }
    })
  })

</script>