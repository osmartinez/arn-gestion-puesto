<div class="modal fade" id="modalConfigurarSetPaquete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true">
    <!-- Change class .modal-sm to change the size of the modal -->
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title w-100 text-center" id="myModalLabel">Contador paquetes</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body w-100 text-center">
                <div class="row">
                    <div class="col-md-12">
                        <h5>Reset Automático</h5>
                        <div class="switch">
                            <label class="font-weight-bold">
                                <span></span>
                                <input id="check-contador-paquete-manual" type="checkbox">
                                <span class="lever"></span>
                            </label>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <h5>¿Cuántos pares forman un paquete?</h5>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <input id="input-pares-paquete" value="0" type="number" />
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-6">
                        <a id="btn-menos-config-paquetes" class="btn-floating btn-lg btn-default"><i class="fas fa-minus"></i></a>
                    </div>
                    <div class="col-md-6">
                        <a id="btn-mas-config-paquetes" class="btn-floating btn-lg btn-default"><i class="fas fa-plus"></i></a>
                    </div>
                </div>
            </div>
            <div class="modal-footer  w-100 text-center">
                <div class="col-md-6">
                    <button type="button" class="btn btn-danger btn-lg" data-dismiss="modal">CANCELAR</button>
                </div>
                <div class="col-md-6">
                    <button type="button" class="btn btn-success btn-lg">GUARDAR</button>
                </div>
            </div>
        </div>
    </div>
</div>